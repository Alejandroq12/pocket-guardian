<div class="container groups_page">
  <section class="groups_page__container">
    <% if @groups.any? %>

      <% @groups.each do |group| %>
        <div class="group_details__container">
          <div class="group_left">
            <%= link_to user_group_path(current_user, group) do %>
            <%= image_tag("group_icons/#{group.icon}", alt: group.name, class: "group_details__image") %>
          </div>
          <div class="group_center">
            <p class="group_details__name"><%= group.name %></p>
            <p class="group_details__date"><%= group.created_at.strftime("%B %d, %Y") %></p>
          </div>
          <div class="group_right">
            <p class="group_details__sum"><%= group.movements_sum %></p>
            <% end %>
            <%= button_to "Delete", user_group_path(current_user, group), method: :delete, class: "group_details__button" %>
          </div>
        </div>
      <% end %>
      <div class="group_page__buttons">
        <%= link_to "Add a category", new_user_group_path(current_user), class: "group_page__main_button" %>
        <%= link_to "Add a new movement", new_movement_path, class: "group_page__main_button" %>
      </div>
    <% else %>
      <p class="groups_page__no_groups--paragraph">There are no categories.</p>
      <%= link_to "Add a category", new_user_group_path(current_user), class: "groups_page__add_group_button" %>
    <% end %>
  </section>
</div>
