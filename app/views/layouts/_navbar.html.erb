<% if user_signed_in? || !current_page?(root_page) || current_page?(new_user_session_path) || current_page?(new_user_registration_path) %>
  <nav class="nav-bar">
    <div class="nav_bar__container">
      <% if !current_page?(authenticated_root_path)%>
        <%= link_to "javascript:history.back()", class: 'nav_bar__back_button' do %>
        <span><</span>
        <% end %>
      <% elsif user_signed_in? && current_page?(authenticated_root_path) %>
        <button type="button" class="hamburguer_button">
          <span class="button_bar"></span>
          <span class="button_bar"></span>
          <span class="button_bar"></span>
        </button>
        <% elsif !user_signed_in? && (current_page?(new_user_session_path) || current_page(new_user_registration_path)) %>
        <%= link_to "javascript:history.back()", class: 'nav_bar__back_button' do %>
          <span><</span>
        <% end %>
      <% end %>
      <!-- Title based on page -->
      <div>
        <% if user_signed_in? && current_page?(authenticated_root_path) %>
          <h1>Groups</h1>
        <% elsif user_signed_in? && current_page?(new_user_group_path) %>
          <h1>Add a new group</h1>
        <% elsif  user_signed_in? && current_page(user_group_pat(current_user, @group)) %>
          <h1>Movements</h1>
      </div>
    </div>
  </nav>
<% end %>